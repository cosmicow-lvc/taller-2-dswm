# Etapa de build
FROM node:20-alpine AS builder
WORKDIR /app
COPY package*.json ./
RUN npm install
COPY . .
RUN npm run build

# Etapa de producciÃ³n
FROM node:20-alpine
WORKDIR /app
COPY package*.json ./
RUN npm ci --only=production
COPY --from=builder /app/dist ./dist

# ðŸ‘‡ Copia el .env que estÃ¡ en backend/api2/Express
COPY .env .env

EXPOSE 3000
CMD ["node", "dist/index.js"]